# ResponsiAI Environment Variables Configuration

# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/responsiai

# ============================================
# AI PROVIDER CONFIGURATION
# ============================================
# These are used via Replit AI Integrations
# Get API keys from respective providers:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/
# - Google AI: https://makersuite.google.com/app/apikey

# OpenAI Configuration
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1
AI_INTEGRATIONS_OPENAI_API_KEY=sk-...

# Anthropic Configuration
AI_INTEGRATIONS_ANTHROPIC_BASE_URL=https://api.anthropic.com
AI_INTEGRATIONS_ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini Configuration
AI_INTEGRATIONS_GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
AI_INTEGRATIONS_GEMINI_API_KEY=AIza...

# ============================================
# STRIPE BILLING
# ============================================
# Get these from https://dashboard.stripe.com/
# Use test keys for development (sk_test_..., pk_test_...)
# Use live keys for production (sk_live_..., pk_live_...)

# Secret key (server-side only)
STRIPE_SECRET_KEY=sk_test_...

# Publishable key (client-side safe)
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Webhook secret for verifying webhook signatures
# Get this from Stripe Dashboard > Webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# Price IDs for subscription plans
# Create these in Stripe Dashboard > Products
STRIPE_PRICE_ID_PRO=price_...
STRIPE_PRICE_ID_ENTERPRISE=price_...

# ============================================
# APPLICATION SETTINGS
# ============================================
# Base URL for the application (used for redirects, webhooks)
APP_URL=http://localhost:5000

# Environment mode
# Options: development, production
NODE_ENV=development

# Server port (default: 5000)
# Note: Replit uses PORT environment variable automatically
PORT=5000

# ============================================
# SESSION MANAGEMENT
# ============================================
# Session secret for encrypting session data
# Generate a random string: openssl rand -base64 32
# REQUIRED for production
SESSION_SECRET=your-secret-key-here-change-in-production

# Cookie domain (optional, for production with custom domain)
# COOKIE_DOMAIN=.yourdomain.com

# ============================================
# REDIS (Optional - for Production)
# ============================================
# Redis URL for distributed session management
# If not set, uses in-memory store (not suitable for multi-server deployments)
# Format: redis://username:password@host:port
# REDIS_URL=redis://localhost:6379

# ============================================
# EMAIL NOTIFICATIONS
# ============================================
# SMTP configuration for sending email notifications
# Required for subscription confirmations and notifications

# SMTP Server Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# From address for outgoing emails
EMAIL_FROM=ResponsiAI <noreply@responsiai.com>

# Alternative providers:
# - Gmail: smtp.gmail.com:587 (requires app password)
# - SendGrid: smtp.sendgrid.net:587 (API key as password)
# - AWS SES: email-smtp.region.amazonaws.com:587
# - Mailgun: smtp.mailgun.org:587

# ============================================
# MONITORING & ERROR TRACKING
# ============================================
# Sentry DSN for error tracking and performance monitoring
# Get from: https://sentry.io/
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Log level
# Options: error, warn, info, debug
LOG_LEVEL=info

# ============================================
# SECURITY HEADERS
# ============================================
# These are configured automatically via helmet
# Additional CSP directives can be added in server/config/security.ts

# ============================================
# DATABASE BACKUPS
# ============================================
# Directory for database backups (optional, defaults to ./backups)
# BACKUP_DIR=/path/to/backups

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Enable verbose logging
# DEBUG=true

# Disable rate limiting for development
# DISABLE_RATE_LIMIT=true
