# ResponsiAI Environment Variables Configuration

# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/responsiai

# ============================================
# AI PROVIDER CONFIGURATION
# ============================================
# These are used via Replit AI Integrations
# Get API keys from respective providers:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/
# - Google AI: https://makersuite.google.com/app/apikey

# OpenAI Configuration
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1
AI_INTEGRATIONS_OPENAI_API_KEY=sk-...

# Anthropic Configuration
AI_INTEGRATIONS_ANTHROPIC_BASE_URL=https://api.anthropic.com
AI_INTEGRATIONS_ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini Configuration
AI_INTEGRATIONS_GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
AI_INTEGRATIONS_GEMINI_API_KEY=AIza...

# ============================================
# STRIPE BILLING (Optional - v1.1 Feature)
# ============================================
# Get these from https://dashboard.stripe.com/
# Use test keys for development (sk_test_..., pk_test_...)
# Use live keys for production (sk_live_..., pk_live_...)

# Secret key (server-side only)
STRIPE_SECRET_KEY=sk_test_...

# Publishable key (client-side safe)
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Webhook secret for verifying webhook signatures
# Get this from Stripe Dashboard > Webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# Price IDs for subscription plans
# Create these in Stripe Dashboard > Products
STRIPE_PRICE_ID_PRO=price_...
STRIPE_PRICE_ID_ENTERPRISE=price_...

# ============================================
# APPLICATION SETTINGS
# ============================================
# Base URL for the application (used for redirects, webhooks)
APP_URL=http://localhost:5000

# Environment mode
# Options: development, production
NODE_ENV=development

# Server port (default: 5000)
# Note: Replit uses PORT environment variable automatically
PORT=5000

# ============================================
# OPTIONAL: AUTHENTICATION (Future)
# ============================================
# Session secret for encrypting session data
# Generate a random string: openssl rand -base64 32
# SESSION_SECRET=your-secret-key-here

# ============================================
# OPTIONAL: EMAIL (Future)
# ============================================
# Email provider configuration for notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ============================================
# OPTIONAL: MONITORING (Future)
# ============================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://...@sentry.io/...

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Enable verbose logging
# DEBUG=true

# Disable rate limiting for development
# DISABLE_RATE_LIMIT=true
